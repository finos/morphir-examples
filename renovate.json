{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Group non-major npm dependencies",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "npm dependencies (non-major)"
    },
    {
      "description": "Group non-major Elm dependencies",
      "matchManagers": ["elm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "elm dependencies (non-major)"
    }
  ]
}
